@model IEnumerable<wpd2coursework.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateAdded)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateAdded)
            </td>
            <td>
                @if (ViewContext.HttpContext.User.IsInRole("Sales Assistant"))
                {
                    <a>@Html.ActionLink("Edit", "Edit", new { id = item.ID }) </a>
                }
                <a>  @Html.ActionLink("Details", "Details", new { id = item.ID })</a>
            </td>
        </tr>
    }
</table>
<a href="@Url.Action("ExportWishlistToPdf", "Wishlists")">Share Wishlist </a>

